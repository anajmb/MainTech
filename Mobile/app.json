{
  "expo": {
    "name": "Maintech",
    "slug": "maintech",
    "version": "1.0.0",
    "orientation": "portrait",
    "image": "./assets/images/background-mobile.png",
    "icon": "./assets/images/LogoVermelha.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Nosso app precisa do Bluetooth para conectar ao ESP32.",
        "NSBluetoothPeripheralUsageDescription": "Nosso app precisa do Bluetooth para se comunicar com dispositivos.",
        "NSCameraUsageDescription": "Este app precisa acessar a c√¢mera para ler QR Codes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/background-mobile.png",
        "backgroundColor": "#A50702"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.Mobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "Peripheral",
            "Central"
          ],
          "bluetoothAlwaysUsageDescription": "Nosso app precisa do Bluetooth para conectar ao ESP32.",
          "bluetoothPeripheralUsageDescription": "Nosso app precisa do Bluetooth para se comunicar com dispositivos."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/background-mobile.png",
          "imageWidth": 1000,
          "resizeMode": "contain",
          "backgroundColor": "#A50702",
          "icon": "./assets/images/LogoBranca.png"
        }
      ],
      "expo-font",
      "react-native-ble-plx"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}